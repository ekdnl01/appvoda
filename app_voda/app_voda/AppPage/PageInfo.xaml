<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_voda.AppPage.PageInfo">
    
        <StackLayout>
            <Label Text="Улица" />
            <Entry Text="{Binding Street}" />
            <Label Text="Дом" />
            <Entry Text="{Binding House}" />
            <Label Text="Причина" />
            <Entry Text="{Binding Reason}" />
            <Label Text="Дата" />
            <Entry Text="{Binding Date}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Сохранить" Clicked="SaveInfo" />
                <Button Text="Удалить" Clicked="DeleteInfo" />
                <Button Text="Отмена" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
</ContentPage>